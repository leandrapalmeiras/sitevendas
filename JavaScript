    footer.addEventListener('click', () => {
        // alert('Obrigado por visitar nossa Queijaria! Faça seu pedido agora.');
        // O alerta está comentado. Se quiser ativá-lo, remova as duas barras (//).
    });

    // Você pode usar este arquivo futuramente para:
    // 1. Validar formulários de contato (se houver).
    // 2. Animar elementos da página.
    // 3. Adicionar um botão "Voltar ao topo".
});